{
	"name": "@inlang/design-system",
	"type": "module",
	"private": "true",
	"exports": {
		"./components": {
			"types": "./dist/components/index.d.ts",
			"import": "./dist/components/index.js"
		},
		"./components/style.css": "./dist/components/style.css",
		"./components/types/svelte": {
			"types": "./types/svelte.d.ts"
		},
		"./colors/tailwind-plugin": {
			"types": "./dist/colors/tailwindPlugin.d.cts",
			"import": "./dist/colors/tailwindPlugin.cjs"
		},
		"./typography/tailwind-plugin": {
			"types": "./dist/typography/tailwindPlugin.d.cts",
			"import": "./dist/typography/tailwindPlugin.cjs",
			"require": "./dist/typography/tailwindPlugin.cjs"
		}
	},
	"files": [
		"./dist",
		"./types"
	],
	"scripts": {
		"build": "npm run clean && tsc --build && npm run generate-tailwind-css",
		"dev": "tsc --watch",
		"test": "vitest run",
		"format": "prettier ./src/** -w --config ../../.prettierrc.json",
		"clean": "rm -r -f ./dist",
		"generate-tailwind-css": "tailwindcss --output ./dist/components/style.css "
	},
	"dependencies": {
		"@ctrl/tinycolor": "^3.4.1",
		"lit": "^2.3.1"
	},
	"devDependencies": {
		"tailwindcss": "^3.1.8"
	}
}
