{
	"name": "@inlang/design-system",
	"type": "module",
	"private": "true",
	"exports": {
		"./tailwind": {
			"types": "./dist/index.d.cts",
			"import": "./dist/index.cjs",
			"require": "./dist/index.cjs"
		},
		"./components": {
			"types": "./dist/components/index.d.ts",
			"import": "./dist/components/index.js"
		},
		"./components/style.css": "./dist/components/style.css",
		"./components/types/svelte": {
			"types": "./src/svelte.d.ts"
		}
	},
	"files": [
		"./dist",
		"./src/svelte.d.ts"
	],
	"scripts": {
		"build": "npm run clean && tsc --build && npm run generate-tailwind-css",
		"dev": "npm run build && concurrently \"tsc --watch\" \"npm run generate-tailwind-css:dev\" --kill-others",
		"test": "vitest run",
		"format": "prettier ./src/** -w --config ../../.prettierrc.json",
		"clean": "rm -r -f ./dist",
		"generate-tailwind-css": "tailwindcss --config ./tailwind.config.cjs --output ./dist/components/tailwind.css",
		"generate-tailwind-css:dev": "tailwindcss --config ./tailwind.config.dev.cjs --output ./.storybook/static/tailwind.css --watch"
	},
	"dependencies": {
		"@ctrl/tinycolor": "^3.4.1",
		"lit": "^2.3.1"
	},
	"devDependencies": {
		"@types/css": "^0.0.33",
		"css": "^3.0.0",
		"lit-html": "^2.3.1",
		"tailwindcss": "^3.1.8"
	}
}
