{
	"extends": "@inlang/source-code-configs/typescript/tsconfig.base.json",
	"include": ["src/**/*"],
	"exclude": ["**/*.test.*", "**/*.stories.ts"],
	"compilerOptions": {
		"lib": ["ESNext", "DOM"],
		"outDir": "dist",
		"module": "ESNext",
		"experimentalDecorators": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"jsx": "react",
		"jsxFactory": "h",
		"allowSyntheticDefaultImports": true,
		// stencil decorators...
		"strict": false
	}
}
