{
	"name": "@inlang/website",
	"private": true,
	"scripts": {
		"dev": "concurrently \"vite dev\" \"npm run generate-tailwind-css:dev\"",
		"build": "npm run generate-tailwind-css:build && vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"generate-tailwind-css:build": "tailwindcss --input ./src/app.css --output ./static/tailwind.css --minify",
		"generate-tailwind-css:dev": "tailwindcss --input ./src/app.css --output ./static/tailwind.css --watch"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "next",
		"@sveltejs/kit": "next",
		"mdsvex": "^0.10.6",
		"svelte": "^3.44.0",
		"svelte-check": "^2.7.1",
		"svelte-preprocess": "^4.10.7",
		"tslib": "^2.3.1",
		"typescript": "^4.7.4",
		"vite": "^3.1.0",
		"tailwindcss": "^3.1.5"
	},
	"dependencies": {
		"@inlang/design-system": "*"
	},
	"type": "module"
}
