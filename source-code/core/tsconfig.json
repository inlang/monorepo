{
	"extends": "configs/typescript/tsconfig.base.json",
	"include": ["src/**/*.ts"],
	"compilerOptions": {
		// DOM because of fetch. TODO: extract fetch from this package and
		// let fetch be provided by the environment.
		"lib": ["ESNext", "DOM"],
		// need to specify node because `$fs` has a node type dependency
		// TODO remove this dependency once a custom filesystem implementation exists
		"types": ["node"],
		"outDir": "./dist",
		"rootDir": "./src"
	}
}
