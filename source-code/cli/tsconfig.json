{
	"extends": "configs/typescript/tsconfig.base.json",
	"compilerOptions": {
		"target": "ES2020",
		"outDir": "dist",
		// remove comments and declarations from the output
		// to decrease the bundle size of the CLI
		"removeComments": true,
		"declaration": false,
		"sourceMap": false
	},
	"include": ["src/**/**.ts"]
}
