{
	"name": "@inlang/sdk-js-plugin",
	"description": "Inlang SDK-JS Plugin",
	"keywords": [
		"inlang",
		"i18n",
		"internationalization",
		"L10n",
		"localization",
		"translation"
	],
	"type": "module",
	"version": "0.3.2",
	"publishConfig": {
		"access": "public"
	},
	"exports": {
		".": "./dist/index.js"
	},
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"./dist"
	],
	"engines": {
		"node": "^18"
	},
	"scripts": {
		"dev": "npm-run-all --print-label --parallel dev:watch dev:test",
		"dev:test": "vitest",
		"dev:watch": "DEV=true node ./build.js",
		"build": "node ./build.js && tsc -p tsconfig.build.json",
		"test": "vitest run"
	},
	"devDependencies": {
		"@inlang/core": "*",
		"@inlang/ide-extension-plugin": "*",
		"esbuild": "^0.17.10",
		"npm-run-all": "^4.1.5",
		"typescript": "^4.9.5",
		"vitest": "^0.29.1"
	},
	"license": "Apache-2.0"
}
